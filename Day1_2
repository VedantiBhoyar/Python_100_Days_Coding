// https://www.hackerrank.com/challenges/find-a-string/problem?isFullScreen=true

def count_substring(string, sub_string):
    count =0
    n = len(string)
    m = len(sub_string)
    i = 0
    while i <= n-m:
        if string[i:i+m] == sub_string :
         count +=1
        i +=1
    return count
